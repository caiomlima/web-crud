@model Projeto_Web_CRUD.Models.Produto

@{
    ViewData["Title"] = "Detalhes do Produto";
}

<h1>Detalhes do Produto @Html.DisplayFor(model => model.Nome)</h1>

<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID do produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            Nome do Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class="col-sm-2">
            Categoria do Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Categoria)
        </dd>
        <dt class="col-sm-2">
            Descrição do Produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Descricao)
        </dd>
        <dt class="col-sm-2">
            Nome do Vendedor
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Vendedor.Nome)
        </dd>
    </dl>
</div>
<br />
<div>
    <a asp-action="Update" asp-route-id="@Model.ProdutoId">Editar Produto</a> |
    <a asp-action="Index">Retornar à listagem</a>
</div>
