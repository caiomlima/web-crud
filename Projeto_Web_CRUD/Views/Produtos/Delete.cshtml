<div>
    <hr />
    <dl class="row">
        <dt class="col-sm-2">
            ID do produto
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.ProdutoId)
        </dd>
        <dt class="col-sm-2">
            @Html.DisplayNameFor(model => model.Nome)
        </dt>
        <dd class="col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
