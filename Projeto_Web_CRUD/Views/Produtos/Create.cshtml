@model Projeto_Web_CRUD.Models.Produto

@{
    ViewData["Title"] = "Novo Produto";
}

<h1>Novo Produto</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Categoria" class="control-label"></label>
                <select asp-for="Categoria" class="custom-select" aria-label="Default select example">
                    <option value="">Selecione uma opção</option>
                    <option value="Alimentos">Alimentos</option>
                    <option value="Limpeza">Limpeza</option>
                    <option value="Eletrônicos">Eletrônicos</option>
                    <option value="Frios">Frios</option>
                    <option value="Brinquedos">Brinquedos</option>
                    <option value="Sem Categoria">Sem Categoria</option>
                    <option value="Não Identificado">Não Identificado</option>
                </select>
                <span asp-validation-for="Categoria" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Descricao" class="control-label"></label>
                <textarea asp-for="Descricao" class="form-control"></textarea>
                <span asp-validation-for="Descricao" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary"/>
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar à listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
