@model Projeto_Web_CRUD.Models.Vendedor

@{
    ViewData["Title"] = "Alterar Vendedor";
}

<h1>Alterar dados do Vendedor @Html.DisplayFor(model => model.Nome)</h1>

<hr />
<div class="row">
    <div class="col-md-12">
        <form asp-action="Update">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="VendedorId" />
            <div class="form-group">
                <label asp-for="Nome" class="control-label">Nome do Vendedor</label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <input asp-for="ProdutosCadastrados" type="hidden" />
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Retornar à listagem</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
