@model Projeto_Web_CRUD.Models.Vendedor

@{
    ViewData["Title"] = "Apagar Vendedor";
}

<h1>Apagar Vendedor @Html.DisplayFor(model => model.Nome)</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Vendedor</h4>
    <hr />
    <dl class="row">
        <dt class = "col-sm-2">
            Nome do Vendedor
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Nome)
        </dd>
        <dt class = "col-sm-2">
            Qtd. de produtos Cadastrados
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.ProdutosCadastrados)
        </dd>
    </dl>
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="VendedorId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Retornar à listagem</a>
    </form>
</div>
